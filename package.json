  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "dotenv": "^16.6.1"
  },
  "devDependencies": {
    "@types/node": "^20.19.24",
    "@vitest/coverage-v8": "^2.1.5",
