{
  "name": "@3viky/mcp-opener",
  "version": "1.0.0",
  "description": "Model Context Protocol server for opening files, folders, and browsers across different OS environments",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mcp-opener": "./dist/index.js"
